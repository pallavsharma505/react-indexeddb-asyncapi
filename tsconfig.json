{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declarationMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
